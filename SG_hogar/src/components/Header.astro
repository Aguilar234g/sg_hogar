---
// Iconos de redes sociales
const socialLinks = [
  { 
    name: 'Facebook',
    url: '#',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>`
  },
  { 
    name: 'Instagram',
    url: '#',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M16 4H8C5.79086 4 4 5.79086 4 8V16C4 18.2091 5.79086 20 8 20H16C18.2091 20 20 18.2091 20 16V8C20 5.79086 18.2091 4 16 4Z"></path><path d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z" fill="white"></path></svg>`
  }
];
---

<!-- Encabezado fijo con fondo semi-transparente y efecto de desenfoque -->
<header class="fixed w-full bg-white/95 backdrop-blur-sm z-50">
  <!-- Gradiente decorativo superior -->
  <div class="absolute inset-x-0 -top-2 h-2 bg-gradient-to-r from-black/5 via-black/10 to-black/5"></div>
  
  <nav class="container mx-auto px-4">
    <div class="flex justify-between items-center h-16 sm:h-20">
      <!-- Logo con animación de hover y efecto flotante -->
      <a 
        href="#inicio" 
        class="block relative transition-all duration-500 hover:scale-105 translate-y-4 sm:translate-y-8 hover:translate-y-3 sm:hover:translate-y-6"
      >
        <div class="relative">
          <!-- Efectos de fondo y sombra -->
          <div class="absolute -inset-2 bg-gradient-to-b from-white via-white to-transparent rounded-xl shadow-2xl -z-10 transform rotate-1"></div>
          <div class="absolute -inset-2 bg-gradient-to-b from-white via-white to-transparent rounded-xl shadow-2xl -z-10 transform -rotate-1"></div>
          <!-- Logo con efectos -->
          <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-gray-100 via-white to-gray-100 rounded-lg opacity-75 group-hover:opacity-100 blur-lg transition-all duration-500"></div>
            <img 
              src="https://cdn.shopify.com/s/files/1/0843/1488/2375/files/sg_hogar_marca.png?v=1732020859" 
              alt="SG HOGAR Logo" 
              class="h-12 sm:h-16 relative z-10 object-contain transform transition-all duration-500 group-hover:scale-110"
            />
          </div>
        </div>
      </a>

      <!-- Redes sociales -->
      <div class="flex items-center space-x-4">
        {socialLinks.map(social => (
          <a 
            href={social.url}
            class="text-gray-600 hover:text-black transition-colors duration-300"
            aria-label={social.name}
          >
            <Fragment set:html={social.icon} />
          </a>
        ))}
      </div>
    </div>
  </nav>
  
  <!-- Línea decorativa inferior -->
  <div class="absolute inset-x-0 bottom-0 h-px bg-gradient-to-r from-transparent via-black/5 to-transparent"></div>
</header>

<style>
  /* Altura fija del encabezado y sombra sutil */
  header {
    height: 4rem;
  }

  @media (min-width: 640px) {
    header {
      height: 5rem;
    }
  }

  header {
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.03);
  }

  /* Animación flotante para el logo */
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0);
    }
    50% {
      transform: translateY(-3px) rotate(0.5deg);
    }
  }

  /* Aplicar animación flotante al hover */
  .group:hover img {
    animation: float 3s ease-in-out infinite;
  }

  /* Soporte para animaciones de hover en dispositivos que lo permiten */
  @media (hover: hover) {
    .group:hover .group-hover\:scale-x-100 {
      transform: scaleX(1);
    }
  }
</style>