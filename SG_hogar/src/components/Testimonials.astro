---
// Datos de los testimonios de clientes
const testimonials = [
  {
    name: "María García",
    role: "Cliente Residencial",
    content: "La atención personalizada y el resultado final superaron todas mis expectativas. Transformaron por completo mi hogar.",
    image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=150&h=150&fit=crop"
  },
  {
    name: "Hotel Velázquez",
    role: "Cliente Corporativo",
    content: "Su profesionalidad y capacidad para entender nuestras necesidades hicieron que el proyecto fuera un éxito rotundo.",
    image: "https://images.unsplash.com/photo-1560250097-0b93528c311a?w=150&h=150&fit=crop"
  },
  {
    name: "Ana Martínez",
    role: "Diseñadora de Interiores",
    content: "Como profesional del sector, valoro enormemente la calidad de sus productos y su compromiso con la innovación.",
    image: "https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?w=150&h=150&fit=crop"
  }
];
---

<!-- Sección de testimonios con fondo negro -->
<section class="py-20 bg-black text-white">
  <div class="container mx-auto px-4">
    <!-- Título de la sección -->
    <h2 
      class="text-4xl font-playfair font-bold text-center mb-16"
      data-aos="fade-up"
    >
      Lo que dicen nuestros clientes
    </h2>
    
    <!-- Grid de testimonios -->
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div 
          class="relative"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <!-- Tarjeta de testimonio con efecto de cristal -->
          <div class="bg-white/5 p-8 rounded-xl backdrop-blur-sm hover:bg-white/10 transition-all duration-300">
            <!-- Cabecera con foto y datos del cliente -->
            <div class="flex items-center gap-4 mb-6">
              <img 
                src={testimonial.image} 
                alt={testimonial.name}
                class="w-16 h-16 rounded-full object-cover"
              />
              <div>
                <h3 class="font-bold">{testimonial.name}</h3>
                <p class="text-sm text-gray-400">{testimonial.role}</p>
              </div>
            </div>
            <!-- Contenido del testimonio -->
            <p class="text-gray-300 italic">"{testimonial.content}"</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>