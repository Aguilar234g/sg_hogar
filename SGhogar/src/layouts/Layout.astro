---
// Importamos las fuentes y estilos necesarios
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/500.css';
import '@fontsource/playfair-display/600.css';
import '@fontsource/playfair-display/700.css';
import 'aos/dist/aos.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="SG HOGAR - Expertos en decoración textil para el hogar en Madrid" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link rel="icon" type="image/png" href="https://cdn.shopify.com/s/files/1/0843/1488/2375/files/sg_hogar_marca.png?v=1732020859" sizes="32x32" />
    <link rel="icon" type="image/png" href="https://cdn.shopify.com/s/files/1/0843/1488/2375/files/sg_hogar_marca.png?v=1732020859" sizes="16x16" />
    <link rel="apple-touch-icon" href="https://cdn.shopify.com/s/files/1/0843/1488/2375/files/sg_hogar_marca.png?v=1732020859" />
    <title>{title}</title>
  </head>
  <body class="font-poppins antialiased bg-white text-gray-900 overflow-x-hidden selection:bg-black selection:text-white">
    <!-- Decorative gradient background -->
    <div class="fixed inset-0 z-[-1] bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-gray-50 via-white to-gray-50 opacity-70"></div>
    
    <!-- Noise texture overlay -->
    <div class="fixed inset-0 z-[-1] opacity-[0.015] pointer-events-none bg-[url('data:image/svg+xml;base64,')]"></div>

    <!-- Main content -->
    <main class="relative">
      <slot />
    </main>

    <!-- Scroll progress indicator -->
    <div id="scroll-progress" class="fixed top-0 left-0 w-full h-0.5 bg-black/10 z-50">
      <div class="h-full bg-black origin-left scale-x-0 transition-transform duration-200 ease-out"></div>
    </div>

    <!-- Back to top button -->
    <button 
      id="back-to-top" 
      class="fixed bottom-8 right-8 bg-black text-white w-12 h-12 rounded-full flex items-center justify-center opacity-0 invisible transition-all duration-300 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black z-50"
      aria-label="Volver arriba"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
      </svg>
    </button>

    <script>
      import AOS from 'aos';
      
      document.addEventListener('DOMContentLoaded', () => {
        // Inicialización de las animaciones AOS con configuración mejorada
        AOS.init({
          duration: 800,
          once: true,
          offset: 100,
          easing: 'cubic-bezier(0.4, 0, 0.2, 1)',
          mirror: true
        });

        // Scroll suave mejorado
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            const targetElement = document.querySelector(targetId);
            
            if (targetElement) {
              const headerOffset = 80;
              const elementPosition = targetElement.getBoundingClientRect().top;
              const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

              window.scrollTo({
                top: offsetPosition,
                behavior: 'smooth'
              });
            }
          });
        });

        // Sistema de detección de sección actual durante el scroll
        const sections = document.querySelectorAll('section[id]');
        const navLinks = document.querySelectorAll('header a');
        const scrollProgress = document.querySelector('#scroll-progress div');
        const backToTop = document.querySelector('#back-to-top');

        window.addEventListener('scroll', () => {
          // Actualizar barra de progreso
          const winScroll = document.documentElement.scrollTop;
          const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
          const scrolled = (winScroll / height) * 100;
          scrollProgress.style.transform = `scaleX(${scrolled / 100})`;

          // Mostrar/ocultar botón de volver arriba
          if (winScroll > 500) {
            backToTop.classList.remove('opacity-0', 'invisible');
            backToTop.classList.add('opacity-100', 'visible');
          } else {
            backToTop.classList.add('opacity-0', 'invisible');
            backToTop.classList.remove('opacity-100', 'visible');
          }

          // Actualizar enlace activo
          let current = '';
          const headerHeight = 80;

          sections.forEach(section => {
            const sectionTop = section.offsetTop - headerHeight - 100;
            const sectionHeight = section.offsetHeight;
            if (winScroll >= sectionTop && winScroll < sectionTop + sectionHeight) {
              current = '#' + section.getAttribute('id');
            }
          });

          navLinks.forEach(link => {
            link.classList.remove('text-black', 'font-medium');
            if (link.getAttribute('href') === current) {
              link.classList.add('text-black', 'font-medium');
            }
          });
        });

        // Funcionalidad del botón volver arriba
        backToTop?.addEventListener('click', () => {
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        });

        // Animación suave al cargar la página
        document.body.classList.add('opacity-0');
        requestAnimationFrame(() => {
          document.body.classList.add('transition-opacity', 'duration-500');
          document.body.classList.remove('opacity-0');
        });
      });
    </script>

    <style is:global>
      /* Configuración base */
      :root {
        --scrollbar-width: 8px;
        --scrollbar-track: rgb(243 244 246);
        --scrollbar-thumb: rgb(209 213 219);
      }

      /* Scrollbar personalizado */
      ::-webkit-scrollbar {
        width: var(--scrollbar-width);
      }

      ::-webkit-scrollbar-track {
        background: var(--scrollbar-track);
      }

      ::-webkit-scrollbar-thumb {
        background: var(--scrollbar-thumb);
        border-radius: var(--scrollbar-width);
      }

      ::-webkit-scrollbar-thumb:hover {
        background: rgb(156 163 175);
      }

      /* Configuración del comportamiento del scroll */
      html {
        scroll-behavior: smooth;
        scroll-padding-top: 80px;
        overflow-x: hidden;
        width: 100%;
        margin: 0;
        padding: 0;
      }

      body {
        overflow-y: scroll;
        margin: 0;
        padding: 0;
        position: relative;
        min-height: 100vh;
      }

      /* Estilos tipográficos */
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Playfair Display', serif;
        font-weight: 600;
        line-height: 1.2;
        letter-spacing: -0.02em;
      }

      p, span, a, li, input, textarea, button {
        font-family: 'Poppins', sans-serif;
        line-height: 1.6;
      }

      /* Transiciones suaves */
      a, button {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Efectos hover */
      a:hover {
        color: rgb(31 41 55);
      }

      button:hover {
        transform: translateY(-1px);
      }

      /* Ajustes responsive */
      @media (max-width: 768px) {
        .container {
          padding-left: 1rem;
          padding-right: 1rem;
          margin-left: auto;
          margin-right: auto;
          width: 100%;
          max-width: 100%;
        }

        :root {
          --scrollbar-width: 4px;
        }
      }

      /* Animaciones */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in {
        animation: fadeIn 0.5s ease-out forwards;
      }

      /* Utilidades */
      .container {
        max-width: 1280px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
      }

      /* Mejoras de accesibilidad */
      :focus-visible {
        outline: 2px solid black;
        outline-offset: 2px;
      }

      /* Soporte para modo oscuro del sistema */
      @media (prefers-color-scheme: dark) {
        :root {
          --scrollbar-track: rgb(17 24 39);
          --scrollbar-thumb: rgb(55 65 81);
        }
      }
    </style>
  </body>
</html>